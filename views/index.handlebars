<div class="card">
  <div class="card-body">
    <center><h2 class="card-title">EAT ALL DA BURGERS</h2></center>
    <div class="container">
      <div class="row">

          <div class="col-md-6">
            <center><h5>In the Queue!</h5></center>
            <div id="queue">

                {{!-- display burgers in queue unless devoured is true --}}
              {{#each burgers}}
                {{#unless devoured}}
                <form action="burger/eat/{{id}}" method="POST">
                  <div class="input-group">
                    <li class="form-control">{{id}}. {{burger_name}}</li>
                      <span class="input-group-btn">
                        <button class="btn btn-primary devourButton" type="submit">Devour It!</button>
                      </span>
                  </div>
                </form>
                {{/unless}}
              {{/each}}

            </div>
          </div>


          <div class="col-md-6">
              <center><h5>Digested</h5></center>
              <div id="digested">

              {{#each burgers}}
                  {{#if devoured}}
                  <div class="input-group">
                      <li class="form-control">{{id}}. {{burger_name}}</li>
                  </div>
                  {{/if}}
              {{/each}}

              </div>
          </div>
      </div>

    </div>

      <br>

    {{!-- post request to add that new new burger to database--}}
    <div class="container">
      {{!-- form to create new burger object --}}
      <form action="burger/new" method="POST"> 

          <div class="row">
          <div class="col-md-3"></div> 

          <div class="form-group col-md-6">
              <center><label for="newBurger">What burger do you want?</label></center>
              <textarea class="form-control" rows="2" id="newBurger" name="burger_name"></textarea>
          </div>

          <div class="col-md-3"></div> 
          </div>
          
          <center><button id="submitButton" type="submit" class="btn btn-danger">Gimme</button></center>
              
      </form>

    </div>
  </div>
</div>